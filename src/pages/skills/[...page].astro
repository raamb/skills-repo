---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import CardGrid from '../../components/CardGrid.astro';
import Pagination from '../../components/Pagination.astro';
import SearchBar from '../../components/SearchBar.astro';
import EnvFilter from '../../components/EnvFilter.astro';
import Tabs from '../../components/Tabs.astro';
import CodeModal from '../../components/CodeModal.tsx';

export async function getStaticPaths({ paginate }) {
  const skills = await getCollection('skills');
  const sorted = skills.sort((a, b) =>
    b.data.dateAdded.getTime() - a.data.dateAdded.getTime()
  );

  // Get unique platforms from all skills
  const uniquePlatforms = [...new Set(skills.map(skill => skill.data.platform).filter(Boolean))];

  return paginate(sorted, {
    pageSize: 12,
    props: { uniquePlatforms }
  });
}

const { page, uniquePlatforms } = Astro.props;

// Prepare data for the modal
const itemsWithCode = await Promise.all(
  page.data.map(async (entry) => ({
    slug: entry.slug,
    type: 'skill',
    name: entry.data.name,
    frontmatter: entry.data,
    body: entry.body,
  }))
);
---

<Layout title="Skills">
  <main>
    <p class="subtitle">Community-driven collection of reusable skills and agents</p>

    <div class="filters">
      <SearchBar />
      <EnvFilter platforms={uniquePlatforms} />
    </div>

    <Tabs active="skills" />

    <CardGrid>
      {page.data.map((entry) => (
        <Card
          name={entry.data.name}
          description={entry.data.description}
          author={entry.data.author}
          tags={entry.data.tags}
          slug={entry.slug}
          type="skill"
          platform={entry.data.platform}
        />
      ))}
    </CardGrid>

    <Pagination
      currentPage={page.currentPage}
      totalPages={page.lastPage}
      baseUrl={import.meta.env.BASE_URL + '/skills'}
    />

    <CodeModal client:load items={itemsWithCode} />
  </main>
</Layout>

<style>
  .subtitle {
    color: #666;
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .filters {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
</style>
